#include<stdio.h>
#include<conio.h>
void Desendig_Sort()
{
   long Number[30];
   long i,j,a,N;

   printf("Enter the value of N:- ");
   scanf("%ld", &N);
   printf("\nEnter %ld numbers \n",N);

   for(i=0; i<N; i++)
      {
	 scanf("%ld", &Number[i]);
      }
   for(i=0; i<N; i++)
      {
	 for(j=i+1; j<N; j++)
	    {
		if(Number[i]<Number[j])
		   {
		      a=Number[i];
		      Number[i]=Number[j];
		      Number[j]=a;
		   }
	    }
      }

   printf("\nThe numbers arranged in descending order are given below\n");

   for(i=0; i<N; i++)
      {
	 printf("%ld\n",Number[i]);
      }
 }
 void main()
 {
     void Desending_Sort(void);
  clrscr();
     Desendig_Sort();
  getch();
 }
