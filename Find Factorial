#include<stdio.h>
#include<conio.h>
void Factorial()
{
   long i,N,Fact=1;
   gotoxy(21,1);
   printf("Program To Find Factorial Of Entered Number\n");
   for(i=0; i<80; i++) printf("*");
   printf("Enter Number:- ");
   scanf("%ld",&N);
   if(N>=20)
      {
			printf("\nError:- \n\tPlease Enter Number Less Than 19");
		}
	else
		{
			for(i=1; i<=N; i++)
				{
					Fact=Fact*i;
				}
			printf("\n\tFactorial Is = %ld",Fact);
		}
}
void main()
{
	 void Factorial(void);
 clrscr();
	 Factorial();
 getch();
}
